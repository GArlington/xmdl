<?xml version="1.0" encoding="utf-8" standalone="no"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <package extends="struts-default" name="Order" namespace="/Order">
        <action class="org.xmdl.taslak.webapp.action.OrderAction" method="list" name="orders">
            <result name="input">/WEB-INF/pages/orderList.jsp</result>
            <result>/WEB-INF/pages/orderList.jsp</result>
        </action>
        <action class="org.xmdl.taslak.webapp.action.OrderAction" method="edit" name="editOrder">
            <result>/WEB-INF/pages/orderForm.jsp</result>
            <result name="error">/WEB-INF/pages/orderList.jsp</result>
        </action>
        <action class="org.xmdl.taslak.webapp.action.OrderAction" method="save" name="saveOrder">
            <result name="input">/WEB-INF/pages/orderForm.jsp</result>
            <result name="cancel" type="redirect">orders.do</result>
            <result name="delete" type="redirect">orders.do</result>
            <result name="success" type="redirect">orders.do</result>
        </action>
        <action class="org.xmdl.taslak.webapp.action.OrderAction" method="copy" name="copyOrder">
            <result name="success">/WEB-INF/pages/orderForm.jsp</result>
        </action>
        <action class="org.xmdl.taslak.webapp.action.OrderAction" method="list" name="ajaxList">
            <result name="success">/WEB-INF/pages/orderListJson.jsp</result>
        </action>
    </package>
</struts>
