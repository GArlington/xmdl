<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <package extends="struts-default" name="Profile" namespace="/Profile">
        <action class="org.xmdl.taslak.webapp.action.ProfileAction" method="list" name="profiles">
            <result name="input">/WEB-INF/pages/profileList.jsp</result>
            <result>/WEB-INF/pages/profileList.jsp</result>
        </action>
        <action class="org.xmdl.taslak.webapp.action.ProfileAction" method="edit" name="editProfile">
            <result>/WEB-INF/pages/profileForm.jsp</result>
            <result name="error">/WEB-INF/pages/profileList.jsp</result>
        </action>
        <action class="org.xmdl.taslak.webapp.action.ProfileAction" method="save" name="saveProfile">
            <result name="input">/WEB-INF/pages/profileForm.jsp</result>
            <result name="cancel" type="redirect">profiles.do</result>
            <result name="delete" type="redirect">profiles.do</result>
            <result name="success" type="redirect">profiles.do</result>
        </action>
        <action class="org.xmdl.taslak.webapp.action.ProfileAction" method="copy" name="copyProfile">
            <result name="success">/WEB-INF/pages/profileForm.jsp</result>
        </action>
        <action class="org.xmdl.taslak.webapp.action.ProfileAction" method="list" name="ajaxList">
            <result name="success">/WEB-INF/pages/profileListJson.jsp</result>
        </action>
    </package>
</struts>
