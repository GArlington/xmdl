<plugin
   id="xmdldb.ui"
   name="%pluginName"
   version="0.5.0.20070823_alpha1"
   provider-name="%providerName"
   class="chrome.xmdldb.ui.XmdldbEditPlugin$Implementation">

   <requires>
      <import plugin="xmdl.ui"/>
      <import plugin="xmdl"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.emf.edit.ui"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.emf.ecore.xmi"/>
   </requires> 

  <extension point="org.eclipse.emf.edit.itemProviderAdapterFactories">
    <factory 
       uri = "http:///chrome/xmdl.db.ecore" 
       class = "chrome.xmdldb.provider.XmdldbItemProviderAdapterFactory"
       supportedTypes = 
         "org.eclipse.emf.edit.provider.IEditingDomainItemProvider
          org.eclipse.emf.edit.provider.IStructuredItemContentProvider
          org.eclipse.emf.edit.provider.ITreeItemContentProvider
          org.eclipse.emf.edit.provider.IItemLabelProvider
          org.eclipse.emf.edit.provider.IItemPropertySource" />
  </extension>
  


  <extension point = "org.eclipse.ui.editors">
    <editor
        id = "chrome.xmdldb.presentation.XmdldbEditorID"
        name = "%_UI_XmdldbEditor_label"
        icon = "icons/full/obj16/XmdldbModelFile.gif"
        extensions = "xmdldb"
        class = "chrome.xmdldb.presentation.XmdldbEditor" 
        contributorClass="chrome.xmdldb.presentation.XmdldbActionBarContributor" >
    </editor>
  </extension>    
  
  <extension point="org.eclipse.emf.ecore.generated_package">
    <package 
       uri = "http:///chrome/xmdl.db.ecore" 
       class = "chrome.xmdldb.XmdldbPackage"
       genModel = "model/xmdl.db.genmodel" /> 
  </extension>
  
</plugin>
