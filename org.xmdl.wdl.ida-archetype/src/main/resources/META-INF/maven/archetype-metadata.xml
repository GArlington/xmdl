<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor name="xmdl-ida">
  <requiredProperties>
    <requiredProperty key="org.xmdl.wdl.version"/>
  </requiredProperties>
  <fileSets>
    <fileSet filtered="true" encoding="UTF-8">
      <directory></directory>
      <includes>
        <include>generate.xml</include>
        <include>generator.properties</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <directory>wdl</directory>
      <includes>
        <include>**/*.mwe</include>
        <include>**/*.wdl</include>
      </includes>
    </fileSet>
  </fileSets>
  <modules>
    <module id="${rootArtifactId}-core" dir="core" name="${rootArtifactId}-core">
      <fileSets>
        <fileSet filtered="true" encoding="UTF-8">
          <directory></directory>
          <includes>
            <include>*.xml</include>
          </includes>
        </fileSet>
      </fileSets>
    </module>
    <module id="${rootArtifactId}-webapp" dir="web" name="${rootArtifactId}-webapp">
      <fileSets>
        <fileSet filtered="true" encoding="UTF-8">
          <directory></directory>
          <includes>
            <include>*.xml</include>
          </includes>
        </fileSet>
      </fileSets>
    </module>
  </modules>
</archetype-descriptor>