<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<plugin>

    <extension
            point="org.eclipse.ui.editors">
        <editor
            class="org.xmdl.WDLExecutableExtensionFactory:org.eclipse.xtext.ui.core.editor.XtextEditor"
            contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
            default="true"
            extensions="wdl"
            id="org.xmdl.WDL"
            name="WDL Editor">
        </editor>
    </extension>
    <extension
        point="org.eclipse.ui.handlers">
        <handler
            class="org.xmdl.WDLExecutableExtensionFactory:org.eclipse.xtext.ui.common.editor.hyperlinking.OpenDeclarationHandler"
            commandId="org.eclipse.xtext.ui.common.editor.hyperlinking.OpenDeclaration">
            <activeWhen>
                <reference
                    definitionId="org.xmdl.WDL.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
        <handler
            class="org.xmdl.WDLExecutableExtensionFactory:org.eclipse.xtext.ui.core.editor.handler.ValidateActionHandler"
            commandId="org.xmdl.WDL.validate">
         <activeWhen>
            <reference
                    definitionId="org.xmdl.WDL.Editor.opened">
            </reference>
         </activeWhen>
      </handler>
    </extension>
    <extension point="org.eclipse.core.expressions.definitions">
        <definition id="org.xmdl.WDL.Editor.opened">
            <and>
                <reference definitionId="isActiveEditorAnInstanceOfXtextEditor"/>
                <with variable="activeEditor">
                    <test property="org.eclipse.xtext.ui.core.editor.XtextEditor.languageName" 
                        value="org.xmdl.WDL" 
                        forcePluginActivation="true"/>
                </with>        
            </and>
        </definition>
    </extension>
    <extension
            point="org.eclipse.ui.preferencePages">
        <page
            class="org.xmdl.WDLExecutableExtensionFactory:org.eclipse.xtext.ui.core.editor.preferences.LanguageRootPreferencePage"
            id="org.xmdl.WDL"
            name="WDL"
            category="org.eclipse.xtext.languages">
            <keywordReference id="org.xmdl.ui.keyword_WDL"/>
        </page>
        <page
            category="org.xmdl.WDL"
            class="org.xmdl.WDLExecutableExtensionFactory:org.eclipse.xtext.ui.common.editor.syntaxcoloring.SyntaxColoringPreferencePage"
            id="org.xmdl.WDL.coloring"
            name="Syntax Coloring">
            <keywordReference id="org.xmdl.ui.keyword_WDL"/>
        </page>
        <page
            category="org.xmdl.WDL"
            class="org.xmdl.WDLExecutableExtensionFactory:org.eclipse.xtext.ui.common.editor.templates.XtextTemplatePreferencePage"
            id="org.xmdl.WDL.templates"
            name="Templates">
            <keywordReference id="org.xmdl.ui.keyword_WDL"/>
        </page>
    </extension>
    <extension
        point="org.eclipse.ui.keywords">
        <keyword
            id="org.xmdl.ui.keyword_WDL"
            label="WDL"/>
    </extension>
    <extension
         point="org.eclipse.ui.commands">
      <command
            description="Trigger expensive validation"
            id="org.xmdl.WDL.validate"
            name="Validate">
      </command>
    </extension>
    <extension point="org.eclipse.ui.menus">
        <menuContribution
            locationURI="popup:#TextEditorContext?after=group.open">
             <command
                 commandId="org.xmdl.WDL.validate"
                 style="push"
                 tooltip="Trigger expensive validation">
            <visibleWhen checkEnabled="false">
                <reference
                    definitionId="org.xmdl.WDL.Editor.opened">
                </reference>
            </visibleWhen>
         </command>  
         </menuContribution>
    </extension>

<!-- adding resource factories -->

	<extension
		point="org.eclipse.emf.ecore.extension_parser">
		<parser
			class="org.xmdl.WDLExecutableExtensionFactory:org.eclipse.xtext.resource.XtextResourceFactory"
			type="wdl">
		</parser>
	</extension>




</plugin>
