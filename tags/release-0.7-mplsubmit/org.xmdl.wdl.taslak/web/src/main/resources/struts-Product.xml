<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <package extends="struts-default" name="Product" namespace="/Product">
        <action class="org.xmdl.taslak.webapp.action.ProductAction" method="list" name="products">
            <result name="input">/WEB-INF/pages/productList.jsp</result>
            <result>/WEB-INF/pages/productList.jsp</result>
        </action>
        <action class="org.xmdl.taslak.webapp.action.ProductAction" method="edit" name="editProduct">
            <result>/WEB-INF/pages/productForm.jsp</result>
            <result name="error">/WEB-INF/pages/productList.jsp</result>
        </action>
        <action class="org.xmdl.taslak.webapp.action.ProductAction" method="save" name="saveProduct">
            <result name="input">/WEB-INF/pages/productForm.jsp</result>
            <result name="cancel" type="redirect">products.do</result>
            <result name="delete" type="redirect">products.do</result>
            <result name="success" type="redirect">products.do</result>
        </action>
        <action class="org.xmdl.taslak.webapp.action.ProductAction" method="copy" name="copyProduct">
            <result name="success">/WEB-INF/pages/productForm.jsp</result>
        </action>
        <action class="org.xmdl.taslak.webapp.action.ProductAction" method="list" name="ajaxList">
            <result name="success">/WEB-INF/pages/productListJson.jsp</result>
        </action>
    </package>
</struts>
