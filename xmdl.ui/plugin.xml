<plugin>

  <extension point="org.eclipse.emf.edit.itemProviderAdapterFactories">
    <factory 
       uri = "http://chrome/xmdl.ecore" 
       class = "chrome.xmdl.provider.XmdlItemProviderAdapterFactory"
       supportedTypes = 
         "org.eclipse.emf.edit.provider.IEditingDomainItemProvider
          org.eclipse.emf.edit.provider.IStructuredItemContentProvider
          org.eclipse.emf.edit.provider.ITreeItemContentProvider
          org.eclipse.emf.edit.provider.IItemLabelProvider
          org.eclipse.emf.edit.provider.IItemPropertySource" />
  </extension>
  
  <extension
    point="org.eclipse.core.runtime.applications"
    id="XmdlEditorAdvisorApplication">
    <application>
      <run
        class="chrome.xmdl.ui.XmdlEditorAdvisor$Application">
      </run>
    </application>
  </extension>

   <extension
    point="org.eclipse.ui.perspectives">
    <perspective
      name="%_UI_Perspective_label"
      class="chrome.xmdl.ui.XmdlEditorAdvisor$Perspective"
      id="chrome.xmdl.ui.XmdlEditorAdvisorPerspective">
    </perspective>
  </extension>

  <extension
    point="org.eclipse.ui.commands">
    <command
      name="%_UI_Menu_OpenURI_label"
      description="%_UI_Menu_OpenURI_description"
      categoryId="org.eclipse.ui.category.file"
      id="chrome.xmdl.ui.XmdlEditorAdvisorOpenURICommand" />  
    <command
      name="%_UI_Menu_Open_label"
      description="%_UI_Menu_Open_description"
      categoryId="org.eclipse.ui.category.file"
      id="chrome.xmdl.ui.XmdlEditorAdvisorOpenCommand" />  
  </extension>
  
  <extension
    point="org.eclipse.ui.bindings">
    <key
      commandId="chrome.xmdl.ui.XmdlEditorAdvisorOpenURICommand"
      sequence="M1+U"
      schemeId="org.eclipse.ui.defaultAcceleratorConfiguration" />
    <key
      commandId="chrome.xmdl.ui.XmdlEditorAdvisorOpenCommand"
      sequence="M1+O"
      schemeId="org.eclipse.ui.defaultAcceleratorConfiguration" />
  </extension>

  <extension
    point="org.eclipse.ui.actionSets">
    <actionSet
      label="%_UI_XmdlEditorAdvisor_ActionSet_label"
      visible="true"
      id="XmdlEditorAdvisorActionSet">
      <action
        label="%_UI_Menu_About_label"
        class="chrome.xmdl.ui.XmdlEditorAdvisor$AboutAction"
        menubarPath="help/additions"
        id="chrome.xmdl.ui.XmdlEditorAdvisorAboutAction">
      </action>
      <action
        label="%_UI_Menu_OpenURI_label"
        definitionId="chrome.xmdl.ui.XmdlEditorAdvisorOpenURICommand"
        class="chrome.xmdl.ui.XmdlEditorAdvisor$OpenURIAction"
        menubarPath="file/additions"
        id="chrome.xmdl.ui.XmdlEditorAdvisorOpenURIAction">
      </action>
      <action
        label="%_UI_Menu_Open_label"
        definitionId="chrome.xmdl.ui.XmdlEditorAdvisorOpenCommand"
        class="chrome.xmdl.ui.XmdlEditorAdvisor$OpenAction"
        menubarPath="file/additions"
        id="chrome.xmdl.ui.XmdlEditorAdvisorOpenAction">
      </action>
    </actionSet>
  </extension>
   

  <extension
    point="org.eclipse.ui.actionSets">
    <actionSet
      label="%_UI_XmdlModelWizard_ActionSet_label"
      visible="true"
      id="chrome.xmdl.presentation.XmdlActionBarContributorActionSet">
      <action
        label="%_UI_XmdlModelWizard_label"
        class="chrome.xmdl.presentation.XmdlActionBarContributor$NewAction"
        menubarPath="file/new/additions"
        id="chrome.xmdl.presentation.XmdlActionBarContributorNewAction">
      </action>
    </actionSet>
  </extension>  

  <extension point = "org.eclipse.ui.editors">
    <editor
        id = "chrome.xmdl.presentation.XmdlEditorID"
        name = "%_UI_XmdlEditor_label"
        icon = "icons/full/obj16/XmdlModelFile.gif"
        extensions = "xmdl"
        class = "chrome.xmdl.presentation.XmdlEditor" 
        contributorClass="chrome.xmdl.presentation.XmdlActionBarContributor" >
    </editor>
  </extension>    
</plugin>
